---
// Layout
import Layout from '../layouts/Layout.astro';

// Components
import Button from '../components/Button';

---

<Layout>
	<main class="h-full bg-[#f4f4f4]">
		<section class="w-full pt-60 md:pt-72">
        	<h1 class="text-7xl md:text-7xl font-bold leading-[1.5] text-center lg:text-center text-[#2d5b63]">404</h1>
			<h2 class="text-4xl md:text-5xl font-bold leading-[1.5] text-center lg:text-center">Page Not Found!</h2>
		</section>
		<section class="w-10/12 xl:w-10/12 mx-auto md:flex pt-5 pb-60 md:pb-72">
			<div class="mx-auto">
				<Button link="/" name="Go Home" target="_self" bgColor="bg-[#17A2B8] hover:bg-[#28808D] shadow-md hover:shadow-2xl rounded-3xl" width="w-full text-center text-2xl md:text-2xl text-white pl-6 pr-6" iconStyle='ri-home-5-line' />
			</div>			
		</section>
	</main>
</Layout>