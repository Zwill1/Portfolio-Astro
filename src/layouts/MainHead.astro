---
// SEO Data
import SEOLayout from "../components/SEOLayout.astro";
import { seoData } from "../data/seo";

// Tailwind Global Styles
import "../styles/global.css";

// Variables
const pathname = Astro.url.pathname;

const { title, description } = seoData[pathname] ?? seoData['/404'] ?? {
  // Fallbacks
  title: 'Visuals Plus | Vernon, Kelowna and Calgary Web Design and Development | BC Web Design',
  description: 'Visuals Plus is a Vernon, Kelowna and Calgary Web Design and Development business promoting local businesses with web page design, graphic design, online media',
};

---
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/VP-Favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SEOLayout 
      title={title}
      description={description}
      pathname={pathname}
    />
</head>