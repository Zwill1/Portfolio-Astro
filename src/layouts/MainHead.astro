---
import SEOLayout from "../components/SEOLayout.astro";
import { seoData } from "../data/seo";

// Tailwind Global Styles
import "../styles/global.css";

// Variables

const pathname = Astro.url.pathname;
// console.log(pathname);

const { title, description } = seoData[pathname] ?? {
  // Fallbacks
  title: 'Visuals Plus | Vernon, Kelowna and Calgary Web Design and Development | BC Web Design',
  description: 'Visuals Plus is a Vernon, Kelowna and Calgary Web Design and Development business promoting local businesses with web page design, graphic design, online media',
};

// console.log(JSON.stringify(seoData[pathname]));

---

<head>
    <SEOLayout 
      title={title}
      description={description}
      pathname={pathname}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/VP-Favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description}>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <title>{title}</title>
</head>