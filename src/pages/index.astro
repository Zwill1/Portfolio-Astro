---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// Components
import Hero from '../components/Hero.astro';
import Skills from '../components/Skills.astro';
import Button from '../components/Button';
// import EducationSection from '../components/EducationSection.astro';
import ProjectCardSection from '../components/ProjectCardSection.astro';
import TimeLine from '../components/TimeLine.tsx';

---

<Layout>
	<main>
		<Hero />

		<section class="w-10/12 xl:w-10/12 mx-auto mb-20 mt-5">
			<section>
                <h2 class="text-center text-4xl font-bold uppercase">Work Experience</h2>
            </section>
			<div class="w-full md:flex md:flex-wrap">
				<TimeLine 
					jobTitle='Web Developer / Graphic Designer / IT Support'
					jobStart="SEPT 2020"
					jobEnd="PRESENT"
					jobTags={[
						"HTML5", 
						"CSS3", 
						"PHP", 
						"JS", 
						"REACTJS", 
						"MYSQL", 
						"MSMYSQL",
					]}
					listItems={[
						"Develop & design WordPress websites.",
						"On page SEO Optimization.",
						"Maintain, troubleshoot and update websites, including databases.",
						"Build website features using ReactJS.",
						"Email integration/migration",
						"Designing banner ads & logos.",
						"Create and update campaign reports.",
					]}
				/>
				<TimeLine 
					jobTitle='Web Developer / Graphic Designer'
					jobStart="OCT 2017"
					jobEnd="SEPT 2020"
					jobTags={[
						"HTML5", 
						"CSS3", 
						"JavaScript", 
						"PHP", 
						"MYSQL",
					]} 
					listItems={[
						"Design print materials.",
						"Produced information sheets.",
						"Designed standing banners, booths, posters, and letterheads.",
						"Developed logos and websites.",
						"SEO results and analytics.",
						"Designed regulated industry labels for distribution",
						"Built brands and traveled worldwide for conventions.",
					]}	
				/>
				<TimeLine 
					jobTitle='Web Designer / IT Support'
					jobStart="AUG 2016"
					jobEnd="SEPT 2019"
					jobTags={[
						"HTML5", 
						"CSS3", 
						"JS", 
						"AJAX", 
						"PHP", 
						"MYSQL",
					]} 
					listItems={[
						"Updated and maintained the growth of the company website.",
						"Uploaded and updated new products/prices.",
						"Photographing new products.",
						"Developing new websites for upcoming E-liquid brands.",
						"Increased traffic and revenue through website optimization",
						"Email newsletter marketing.",
						"Search Engine Optimization / Analytical tracking, product research, keyword research.",
					]}
				/>
			</div>
		</section>

		<ProjectCardSection />
		<section class="w-10/12 xl:w-10/12 mx-auto mb-20 mt-5 md:flex">
			<div class="mx-auto">
				<Button link="/portfolio" name="See more projects" target="_self" bgColor="bg-[#17A2B8] hover:bg-[#28808D] shadow-md hover:shadow-2xl" width="w-full text-center text-1xl text-white pl-6 pr-6" iconStyle='ri-code-s-slash-line' />
			</div>			
		</section>

		<section class="bg-[#f4f4f4] pt-5 pb-5 shadow-xl">
			<Skills />
		</section>

		<!-- <section class="pt-2 pb-20 bg-[#f4f4f4]">
			<div class="mt-10">
				<h2 class="text-center text-4xl font-bold uppercase">Education</h2>
			</div>
			<EducationSection />
			<div class="mt-10">
				<div class="w-full">
					<p class="text-center text-1xl italic">For more information on my education, see below</p>
					<Button link="/education" name="Education" target="_self" bgColor="bg-[#17A2B8] hover:bg-[#28808D] shadow-md hover:shadow-2xl" width="w-[150px] mx-auto mt-5 text-center text-1xl text-white" iconStyle='ri-file-list-3-line' />
				</div>
			</div>
		</section> -->
	</main>
</Layout>
